<h1>Recolectas Pendientes</h1>
</br>
<table>
    <tr>
        <th> Organizacion </th>
        <th> Fecha</th>
        <th> Direccion </th>
        <th> Cantidad en Kilos</th>
    </tr>
    <% @recolectaspendiente.each do |item| %>
    <tr>
        <td><%= item.organizacion %></td>
        <td><%= item.fecha %></td>
        <td><%= item.direccion %></td>
        <td><%= item.cantidadKilos %></td>
        <td><%= link_to "Editar", edit_recolectaspendiente_path(item.id), class: "btn btn-xs btn-primary" %></td>
        <td><%= link_to "Mostrar", recolectaspendiente_path(item), class: "btn btn-xs btn-success" %></td>
        <td><%= link_to "Eliminar", recolectaspendiente_path(item), method: :delete, data: {confirm: "Seguro desea eliminar?"}, class: "btn btn-xs btn-danger" %></td>
    </tr>
    <%end%>
